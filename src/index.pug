mixin projects_table(projects)
  +table()
    tbody
      each project in projects
        tr
          td(rowspan='2')!= project.timeAtHtml
          td= project.name
          td
            if project.members
              span= '体制: '
              span= project.members
        tr
          td(colspan="2")
            div!= project.contentHtml
            if project.tools
              div.using-tools
                span= '使用技術: '
                span
                  each tool in project.tools
                    span.tool= tool

